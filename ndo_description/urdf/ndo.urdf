<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ndo">
    <!-- Base properties -->
    <xacro:property name="base_width" value="0.12"/>
    <xacro:property name="base_length" value="0.38"/>
    <xacro:property name="base_height" value="0.072"/>

    <xacro:property name="footprint_zoff" value="${-(0.135-base_height/2)}"/>

    <!-- Wheel properties -->
    <xacro:property name="wheel_radius" value="0.063"/>
    <xacro:property name="wheel_width" value="0.06"/>
    <xacro:property name="wheel_conn_depth" value="0.013"/>
    <xacro:property name="wheel_adapter_x" value="0.15"/>
    <xacro:property name="wheel_adapter_y" value="0.03"/>
    <xacro:property name="wheel_zoff" value="-0.025"/>
    <xacro:property name="wheel_lfront_xyz" value="0.15 ${wheel_y} ${wheel_zoff}"/>
    <xacro:property name="wheel_rfront_xyz" value="0.15 -${wheel_y} ${wheel_zoff}"/>
    <xacro:property name="wheel_lmiddle_xyz" value="0.0 ${wheel_y} ${wheel_zoff-0.01}"/>
    <xacro:property name="wheel_rmiddle_xyz" value="0.0 -${wheel_y} ${wheel_zoff-0.01}"/>
    <xacro:property name="wheel_lback_xyz" value="-0.15 ${wheel_y} ${wheel_zoff}"/>
    <xacro:property name="wheel_rback_xyz" value="-0.15 -${wheel_y} ${wheel_zoff}"/>

    <xacro:property name="caster_xoff" value="0.14"/>

    <link name="base_link">
        <visual>
            <geometry>
                <!-- <box size="${base_length} ${base_width} ${base_height}"/> -->
                <mesh filename="package://ndo_description/mesh/base.stl"/>
            </geometry>
            <material name="Black">
                <color rgba="0.2 0.2 0.2 1.0"/>
            </material>
        </visual>
    </link>

    <!-- Base footprint of the robot which is the center reference -->
    <link name="base_footprint"/>

    <!-- Joint base_link with base_footprint to place it at ground level -->
    <joint name="base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0.0 0.0 ${footprint_zoff}" rpy="0 0 0"/>
    </joint>

    <!-- Wheels -->
    <xacro:macro name="wheel" params="prefix x_reflect y_reflect z_offset">
        <link name="${prefix}_adptr_link">
            <visual>
                <origin xyz="0 0 0" rpy="${y_reflect*-pi/2} 0 0"/>
                <geometry>
                    <!--<cylinder radius="${wheel_radius}" length="${wheel_width}"/>-->
                    <mesh filename="package://ndo_description/mesh/wheel_adapter.stl"/>
                </geometry>
                <material name="Gray">
                <color rgba="0.5 0.5 0.5 1.0"/>
                </material>
            </visual>
        </link>

        
        <link name="${prefix}_link">
            <visual>
                <origin xyz="0 0 0" rpy="${y_reflect*-pi/2} 0 0"/>
                <geometry>
                    <!--<cylinder radius="${wheel_radius}" length="${wheel_width}"/>-->
                    <mesh filename="package://ndo_description/mesh/wheel.stl"/>
                </geometry>
                <material name="Gray">
                <color rgba="0.5 0.5 0.5 1.0"/>
                </material>
            </visual>
        </link>

        <joint name="${prefix}_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${prefix}_adptr_link"/>
            <origin xyz="${x_reflect*wheel_adapter_x} ${y_reflect*wheel_adapter_y} ${z_offset}" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
        </joint>

        <joint name="${prefix}_adptr_joint" type="continuous">
            <parent link="${prefix}_adptr_link"/>
            <child link="${prefix}_link"/>
            <origin xyz="0 ${y_reflect*(0.062+wheel_width/2-wheel_conn_depth)} 0" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
        </joint>
    </xacro:macro>

    <xacro:wheel prefix="frontwhl_l" x_reflect="1" y_reflect="1" z_offset="${wheel_zoff}"/>
    <xacro:wheel prefix="frontwhl_r" x_reflect="1" y_reflect="-1" z_offset="${wheel_zoff}"/>

    <xacro:wheel prefix="middlewhl_l" x_reflect="0" y_reflect="1" z_offset="${wheel_zoff-0.01}"/>
    <xacro:wheel prefix="middlewhl_r" x_reflect="0" y_reflect="-1" z_offset="${wheel_zoff-0.01}"/>

    <xacro:wheel prefix="backwhl_l" x_reflect="-1" y_reflect="1" z_offset="${wheel_zoff}"/>
    <xacro:wheel prefix="backwhl_r" x_reflect="-1" y_reflect="-1" z_offset="${wheel_zoff}"/>

</robot>